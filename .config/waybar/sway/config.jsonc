// -*- mode: jsonc -*-
{
  "layer": "bottom", // Waybar at bottom layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "margin": "0 0 0 0",
  "gtk-layer-shell": true,
  "modules-left": [
    "custom/fake-power-button",
    "custom/notification",
    "sway/workspaces",
    "sway/scratchpad",
    "sway/mode", 
    "sway/window",
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "backlight",
    "pulseaudio",
    "cpu",
    "memory",
    "battery",
    "network",
    "tray",
    "keyboard-state",
  ],

  // Modules configuration

  "custom/fake-power-button": {
    "format": "<span size='large'>üòé</span>",
    "tooltip": false,
    "on-click": "~/.config/rofi/scripts/powermenu"
  },

  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='#e64553'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='#e64553'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='#e64553'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='#e64553'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
        "focused": "‚óè",
        "default": "‚óã",
    },
    "persistent-workspaces": {
        "1": null, "2": null, "3": null,
        "4": null, "5": null, "6": null,
    }
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "sway/scratchpad": {
    "format": "<span size='16pt'>{icon}</span> <span size='10pt'>{count}</span>",
    "show-empty": false,
    "format-icons": ["‚ùÑ"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}"
  },
  "sway/window": {
    "format": "~ {app_id}"
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "icon-size": 20,
    "spacing": 5
  },
  "clock": {
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    },
    "format": "ÔÑ≥ {:%d/%m/%Y   ÔÄó %H:%M}",	//24 hour format
    "format-alt": "ÔÑ≥ {:%B %d, %Y}",
    "interval": 1
  },
  "cpu": {
    "format": "Ôãõ{usage: >3}%",
    "on-click": "foot --title='btop' -e btop"
  },
  "memory": {
    "format": "Ôî∏{: >3}%",
    "on-click": "foot --title='btop' -e btop"
  },
  "backlight": {
    "format": "{icon}{percent: >3}%",
    "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity: >3}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-plugged": "Û∞ö• {capacity}%",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
    "format-full": "Û∞ÇÑ {capacity}%"
  },
  "network": {
    "format": "‚ö†  Disabled",
    "format-wifi": "Ôá´ {essid}",
    "format-ethernet": "ÔÉÅ{ifname}: {ipaddr}/{cidr}",
    "format-ethernet": "ÔÉÅWired",
    "format-disconnected": "‚ö†  Disconnected",
    "format-alt": "{ifname}",
    "on-click-right": "nm-connection-editor"
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon} {volume: >3}%",
    "format-bluetooth": "{icon} {volume: >3}%",
    "format-muted": "Û∞ùü muted",
    "format-icons": {
      "headphones": "ÔÄ•",
      "handsfree": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["Û∞ïø", "Û∞ñÄ", "ÔÄ®"]
    },
    "on-click": "pavucontrol",
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": {
        "numlock": "‚ìÉ",
        "capslock": "‚í∏"
    },
    //"binding-keys": [58,1,70] // used when `esc` and `caps` are swapped
  },
}
